<%- include("partials/header.ejs") %>

<h1 class="text-center">All users</h1>
<% if(locals.users.length === 0) {%>
  <h2>There are no users</h2>
  <% } else { %>
    <div class="container-fluid d-flex justify-content-center align-items-center">
      <div class="table-responsive d-flex col-md-8 col-sm-12">
        <table class="table table-striped">
          <% const labels = ['ID', 'Username', 'Email', 'Date of Birth', 'Gender', 'Role', 'Created At', 'Updated At', 'Actions']; %>
          <tr>
            <% labels.forEach(function(label) { %>
              <th scope="col" class="text-center"><%= label %></th>
            <% }); %>
          </tr>
          <% users.forEach(function(user, index){ %>
          <tr>
              <td scope="row" class="text-center"><%= user.id %></td>
              <td class="text-center"><%= user.username %></td>
              <td class="text-center"><%= user.email %></td>
              <td class="text-center"><%= user.date_of_birth.toLocaleDateString() %></td>
              <td class="text-center"><%= user.gender.charAt(0).toUpperCase() + user.gender.slice(1) %></td>
              <td class="text-center"><%= user.role.charAt(0).toUpperCase() + user.role.slice(1) %></td>
              <td class="text-center"><%= user.created_at.toISOString().replace('T', ' ').split('.')[0] %></td>
              <td class="text-center"><%= user.updated_at.toISOString().replace('T', ' ').split('.')[0] %></td>
            <td>
              <div class="container d-flex justify-content-center align-items-center" aria-label="User Actions">
                <a class="btn btn-primary" href="/editUser/<%= user.id %>">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                    <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
                  </svg>
                </a>
                <a class="btn btn-danger" href="/deleteUser/<%= user.id %>" 
                  onclick="return confirm('Are you sure you want to remove this user?')">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"/>
                    <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"/>
                  </svg>
                </a>
              </div>
            </td>
          </tr>
          <%}) %>
        </table>
      </div>
    </div>
  <% } %>

<%- include("partials/footer.ejs") %>