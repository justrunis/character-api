<%- include("partials/header.ejs") %>
<%- include("partials/addCharacter.ejs") %>

<div class="container-fluid justify-content-center align-items-center">
        <form class="my-2" action="/characters" method="GET">
            <div class="row my-2 mx-0 card d-flex flex-wrap flex-row justify-content-center">
                <div class="col-md-2">
                    <label for="name">Search by character name</label>
                    <div class="input-group">
                        <input type="text" class="form-control" name="name" placeholder="Enter character name" value="<%= locals.query.name ? locals.query.name : '' %>">
                    </div>
                </div>
                <div class="col-md-2">
                    <label for="sortElement">Search by element</label>
                    <div class="input-group">
                        <select id="sortElement" name="sortElement" class="form-control">
                                <option value="">-- Select element --</option>
                                <% var elements = ['Anemo', 'Geo', 'Electro', 'Hydro', 'Pyro', 'Cryo', 'Dendro']; %>
                                <% elements.forEach(function(element) { %>
                                    <option value="<%= element %>" <% if (element === locals.query.sortElement) { %>selected<% } %>><%= element %></option>
                                <% }); %>
                        </select>
                    </div>
                </div>
                <div class="col-md-2">
                    <label for="sortWeapon">Search by weapon</label>
                    <div class="input-group">
                        <select id="sortWeapon" name="sortWeapon" class="form-control">
                            <option value="">-- Select weapon --</option>
                            <% var weapons = ['Sword', 'Claymore', 'Bow', 'Catalyst', 'Polearm']; %>
                            <% weapons.forEach(function(weapon) { %>
                                <option value="<%= weapon %>" <% if(weapon === locals.query.sortWeapon) { %>selected<%} %>><%= weapon %></option>
                            <% }); %>
                        </select>
                    </div>
                    <input class="form-control" type="hidden" name="page" value="<%= locals.currentPage %>">

                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button class="btn btn-primary" type="submit" onclick="document.getElementsByName('page')[0].value = 1;">Search</button>
                </div>
            </div>
        </form>

        <% if (locals.characters.length === 0) { %>
            <h2 class="text-center">No characters found.</h2>
        <% } else { %>
            <%- include("partials/pager.ejs") %>
            <% characters.forEach(function(character, index) { %>
                <% if (index % 3 === 0) { %>
                    <div class="row mx-2">
                <% } %>
                <div class="col-md-4 my-2">
                    <div class="card my-2">
                        <div class="card-body d-flex flex-column justify-content-center align-items-center">
                            <h2 class="card-title">
                                <%= character.name %>
                            </h2>
                            <img class="card-image" src="<%= character.image_url %>" alt="<%= character.name %> Image">
                            <p class="card-text"><strong>Element:</strong> 
                                <img class="image-fluid" src="/images/Element_<%= character.element %>.jpg" alt="<%= character.element %> Image" height="30" width="30">
                            </p>
                            <p class="card-text"><strong>Rarity:</strong>
                                <% for (let i = 0; i < character.rarity; i++) { %>
                                    <span class="star">‚≠ê</span>
                                <% } %>
                            </p>
                            <p class="card-text"><strong>Weapon:</strong> <%= character.weapon %></p>
                            <p class="card-text"><strong>Birthday:</strong> <%= character.birthday %></p>
                            
                        </div>
                        <div class="container d-flex justify-content-center align-items-center" aria-label="Character Actions">
                            <a class="btn btn-primary btn-md card-button" href="/character/<%= character.id %>">View</a>
                            <% if(locals.user) {%>
                                <% if(locals.user.role === 'admin'){ %>
                                <a class="btn btn-primary btn-md card-button" href="/editCharacter/<%= character.id %>">Edit</a>
                                <a class="btn btn-danger btn-md card-button" href="/deleteCharacter/<%= character.id %>" 
                                    onclick="return confirm('Are you sure you want to remove this character?')">Remove</a>
                                <% } %>
                            <% } %>
                        </div>
                    </div>
                </div>
                <% if ((index + 1) % 3 === 0 || index === characters.length - 1) { %>
                    </div>
                    <hr>
                <% } %>
            <% }); %>
        <% } %>
        <%- include("partials/pager.ejs") %>
    </div>


<%- include("partials/footer.ejs") %>